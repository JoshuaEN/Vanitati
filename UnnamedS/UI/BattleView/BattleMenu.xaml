<UserControl x:Class="UnnamedStrategyGame.UI.BattleMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnnamedStrategyGame.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#7F000000">
    <Grid>
        <Border BorderBrush="AntiqueWhite" BorderThickness="5" HorizontalAlignment="Center" VerticalAlignment="Center" Background="AntiqueWhite">
            <StackPanel>
                <Button Click="CommanderAssignmentButton_Click">Commander Assignments</Button>
                <Separator Background="AntiqueWhite" />
                <Button Click="SaveGameButton_Click">Save Game</Button>
                <Button Click="ExitToMenuButton_Click">Exit to Main Menu</Button>
                <Button Click="ExitToDesktopButton_Click">Exit to Desktop</Button>
                <Separator Background="AntiqueWhite" />
                <Button Click="ReturnToBattleButton_Click">Return To Battle</Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
