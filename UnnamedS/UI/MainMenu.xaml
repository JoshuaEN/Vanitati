<Page x:Class="UnnamedStrategyGame.UI.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnnamedStrategyGame.UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainMenu" Background="AntiqueWhite">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Background="AntiqueWhite">
            <Button Click="NewGameButton_Click">Create Game</Button>
            <Button Click="JoinNetworkedGameButton_Click">Join Game</Button>
            <Separator Background="Transparent" />
            <Button Click="HelpButton_Click">Help &amp; Encyclopedia</Button>
            <Button Click="SettingsButton_Click">Settings</Button>
            <Separator Background="Transparent" />
            <Button Click="LoadMapEditorButton_Click">Map Editor</Button>
            <Button Click="DamageTableButton_Click" Visibility="Collapsed">Damage Table</Button>
            <Separator Background="Transparent" />
            <Button Click="ExitToDesktopButton_Click">Exit to Desktop</Button>
        </StackPanel>
    </Grid>
</Page>
